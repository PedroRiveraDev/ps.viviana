---
import Layout from '../layouts/Layout.astro';
import Contact from '../components/Contact.astro';
---

<Layout title="Contacto | Ps. Viviana Poveda">
  <main>
    <section class="py-20 bg-primary text-white">
      <div class="container mx-auto px-4">
        <div class="max-w-3xl mx-auto text-center">
          <h1 class="text-5xl font-serif font-bold mb-6">Contacto</h1>
          <p class="text-xl">
            Estoy aquí para ayudarte. Agenda una cita o contáctame para más información.
          </p>
        </div>
      </div>
    </section>

    <Contact />

    <section class="py-20">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto">
          <h2 class="text-3xl font-serif font-bold text-gray-900 mb-8 text-center">Ubicación</h2>
          <div class="aspect-w-16 aspect-h-9 rounded-lg overflow-hidden shadow-lg">
            <iframe
              src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3037.496041335889!2d-3.703790384603098!3d40.41677547936472!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0xd42287e9d3db5e5%3A0x3a8c1c0c1c0c1c0c!2sPuerta%20del%20Sol%2C%20Madrid!5e0!3m2!1ses!2ses!4v1620000000000!5m2!1ses!2ses"
              width="100%"
              height="450"
              style="border:0;"
              allowfullscreen=""
              loading="lazy"
            ></iframe>
          </div>
        </div>
      </div>
    </section>
  </main>
</Layout> 