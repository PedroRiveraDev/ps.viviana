---
// Importar el script de contacto
import '../../styles/animations.css';
---

<div class="relative">
  <div class="absolute inset-x-0 top-0 h-[40vh] bg-pink-100"></div>
  
  <section id="contacto" class="relative min-h-screen flex items-start pt-[12vh] pb-20">
    <div class="container mx-auto px-4 lg:px-8">
      <div class="max-w-6xl mx-auto">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-16">
          {/* Columna izquierda - Información de contacto */}
          <div>
            <div class="mb-12" style="margin-top: 12vh;">
              <h3 class="text-pink-500 font-large mb-2 tracking-wide">Contáctame</h3>
              <h2 class="text-4xl font-bold text-gray-900 mb-4">
                Hablemos sobre<br/>
                tu malestar.
              </h2>
            </div>

            <div class="space-y-8" style="margin-top: 10vh;">
              {/* Ubicación */}
              <div class="flex items-start gap-4">
                <div class="w-10 h-10 rounded-full bg-pink-100 flex items-center justify-center flex-shrink-0">
                  <svg class="w-5 h-5 text-pink-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                  </svg>
                </div>
                <div>
                  <h3 class="text-lg font-semibold text-gray-900 mb-1">Ubicación</h3>
                  <p class="text-gray-600">Consulta Online, Santiago de Chile</p>
                </div>
              </div>

              {/* Email */}
              <div class="flex items-start gap-4">
                <div class="w-10 h-10 rounded-full bg-pink-100 flex items-center justify-center flex-shrink-0">
                  <svg class="w-5 h-5 text-pink-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                  </svg>
                </div>
                <div>
                  <h3 class="text-lg font-semibold text-gray-900 mb-1">Correo electrónico</h3>
                  <p class="text-gray-600">ps.vivianapoveda@gmail.com</p>
                </div>
              </div>

              {/* WhatsApp */}
              <div class="flex items-start gap-4">
                <div class="w-10 h-10 rounded-full bg-pink-100 flex items-center justify-center flex-shrink-0">
                  <svg class="w-5 h-5 text-pink-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                  </svg>
                </div>
                <div>
                  <h3 class="text-lg font-semibold text-gray-900 mb-1">WhatsApp</h3>
                  <p class="text-gray-600">+56 9 3591 4385</p>
                </div>
              </div>
            </div>
          </div>

          {/* Columna derecha - Formulario */}
          <div 
            class="bg-white rounded-2xl shadow-lg p-8"
            data-aos="fade-left"
          >
            <h3 class="text-2xl font-bold text-gray-900 mb-6">Envíanos un mensaje</h3>
            <form id="contact-form" class="space-y-6">
              <div>
                <label for="nombre" class="block text-sm font-medium text-gray-700 mb-2">
                  Nombre completo <span class="text-pink-500">*</span>
                </label>
                <input
                  type="text"
                  id="nombre"
                  name="nombre"
                  class="w-full px-4 py-3 rounded-xl border border-gray-200 focus:ring-2 focus:ring-pink-500/20 focus:border-pink-500 placeholder-gray-500 text-gray-800"
                  placeholder="Escribe tu nombre"
                  required
                />
              </div>

              <div>
                <label for="email" class="block text-sm font-medium text-gray-700 mb-2">
                  Correo electrónico <span class="text-pink-500">*</span>
                </label>
                <input
                  type="email"
                  id="email"
                  name="email"
                  class="w-full px-4 py-3 rounded-xl border border-gray-200 focus:ring-2 focus:ring-pink-500/20 focus:border-pink-500 placeholder-gray-500 text-gray-800"
                  placeholder="ejemplo@email.com"
                  required
                />
              </div>

              <div>
                <label for="telefono" class="block text-sm font-medium text-gray-700 mb-2">
                  Teléfono <span class="text-pink-500">*</span>
                </label>
                <input
                  type="tel"
                  id="telefono"
                  name="telefono"
                  class="w-full px-4 py-3 rounded-xl border border-gray-200 focus:ring-2 focus:ring-pink-500/20 focus:border-pink-500 placeholder-gray-500 text-gray-800"
                  placeholder="+56 9 XXXX XXXX"
                  required
                />
              </div>

              <div>
                <label for="mensaje" class="block text-sm font-medium text-gray-700 mb-2">
                  Mensaje <span class="text-pink-500">*</span>
                </label>
                <textarea
                  id="mensaje"
                  name="mensaje"
                  rows="4"
                  class="w-full px-4 py-3 rounded-xl border border-gray-200 focus:ring-2 focus:ring-pink-500/20 focus:border-pink-500 placeholder-gray-500 text-gray-800"
                  placeholder="Escribe tu mensaje aquí"
                  required
                ></textarea>
              </div>

              <button
                type="submit"
                class="w-full btn-primary text-white font-medium py-3 px-6 rounded-lg hover:shadow-lg transition-colors"
              >
                Enviar mensaje
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>

<script is:inline src="/scripts/contact-form.js"></script> 