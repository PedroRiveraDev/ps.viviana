---
import { SITE_CONFIG, NAVIGATION } from '@/utils/constants';
import Button from '../ui/Button.astro';
const currentYear = new Date().getFullYear();
---

<footer class="w-full bg-pink-100 border-t border-gray-200">
  <div class="max-w-7xl mx-auto px-4 py-12 md:py-16">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-12">
      <!-- Columna 1 - Información principal -->
      <div class="flex flex-col space-y-6">
        <div>
          <a href="/" class="flex items-center space-x-2 mb-2">
            <span class="text-2xl font-bold text-primary-900 font-heading">{SITE_CONFIG.name}</span>
          </a>
          <p class="text-gray-700 leading-relaxed">
            {SITE_CONFIG.description}
          </p>
        </div>
        <div class="space-y-2">
          <a
            href={`tel:${SITE_CONFIG.phone}`}
            class="flex items-center text-gray-700 hover:text-pink-600 transition-colors group text-base"
          >
            <svg class="w-5 h-5 mr-2 text-pink-600 group-hover:text-pink-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
            {SITE_CONFIG.phone}
          </a>
          <a
            href={`mailto:${SITE_CONFIG.email}`}
            class="flex items-center text-gray-700 hover:text-pink-600 transition-colors group text-base"
          >
            <svg class="w-5 h-5 mr-2 text-pink-600 group-hover:text-pink-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
            {SITE_CONFIG.email}
          </a>
        </div>
      </div>

      <!-- Columna 2 - Enlaces rápidos -->
      <div class="flex flex-col">
        <h3 class="text-lg font-bold mb-6 text-primary-900 font-heading">Enlaces rápidos</h3>
        <ul class="space-y-4">
          {NAVIGATION.map((item) => (
            <li>
              <a
                href={item.href}
                class="text-gray-700 hover:text-pink-600 transition-colors flex items-center text-base"
              >
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
                {item.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Columna 3 - Newsletter -->
      <div class="flex flex-col">
        <h3 class="text-lg font-bold mb-6 text-primary-900 font-heading">Newsletter</h3>
        <p class="text-gray-700 mb-4">
          Suscríbete para recibir noticias y actualizaciones.
        </p>
        <form class="space-y-2">
          <input
            type="email"
            placeholder="Tu email"
            class="w-full rounded-md border border-gray-300 bg-white/80 px-3.5 py-2 text-gray-700 shadow-sm focus:ring-2 focus:ring-inset focus:ring-pink-500 sm:text-sm sm:leading-6"
          />
          <Button type="submit" variant="primary" size="sm" class="w-full">
            Suscribir
          </Button>
        </form>
      </div>
    </div>

    <div class="border-t border-gray-200/50 mt-12 pt-8 text-center text-gray-600 text-sm">
      <p>
        &copy; {currentYear} {SITE_CONFIG.name}. Dev by <a href="/" class="text-pink-600 hover:text-pink-500">SkinsLabs</a>.
      </p>
    </div>
  </div>
</footer>

