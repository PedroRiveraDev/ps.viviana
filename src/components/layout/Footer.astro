---
import { SITE_CONFIG, NAVIGATION } from '@/utils/constants';
const currentYear = new Date().getFullYear();
---

<footer class="w-full border-t border-gray-200 bg-pink-100">
  <div class="mx-auto max-w-7xl px-4 py-8">
    <div class="grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-3">
      <!-- Columna 1 - Información principal -->
      <div class="flex flex-col space-y-4">
        <div>
          <a href="/" class="mb-3 inline-block">
            <span class="font-heading text-xl font-bold text-primary-900">{SITE_CONFIG.name}</span>
          </a>
          <p class="text-sm leading-relaxed text-gray-700">
            {SITE_CONFIG.description}
          </p>
        </div>
      </div>

      <!-- Columna 2 - Enlaces rápidos -->
      <div class="flex flex-col">
        <h3 class="mb-4 font-heading text-lg font-bold text-primary-900">Enlaces rápidos</h3>
        <ul class="space-y-2">
          {
            NAVIGATION.map(item => (
              <li>
                <a
                  href={item.href}
                  class="text-sm text-gray-700 transition-colors hover:text-pink-600"
                >
                  {item.name}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <!-- Columna 3 - Información de contacto -->
      <div class="flex flex-col">
        <h3 class="mb-4 font-heading text-lg font-bold text-primary-900">Contacto</h3>
        <div class="space-y-2">
          <p class="text-sm text-gray-700">
            {SITE_CONFIG.contact.phone}
          </p>
          <p class="text-sm text-gray-700">
            {SITE_CONFIG.contact.email}
          </p>
          <p class="text-sm text-gray-700">
            {SITE_CONFIG.contact.address}
          </p>
        </div>
      </div>
    </div>

    <div class="mt-8 border-t border-gray-200/50 pt-6 text-center text-xs text-gray-600">
      <p>
        &copy; {currentYear}
        {SITE_CONFIG.name}. Desarrollado con ❤️ por
        <a href="https://inteli-flow.com/" target="_blank" rel="noopener noreferrer" class="text-pink-600 hover:text-pink-500">Inteli Flow</a>.
      </p>
    </div>
  </div>
</footer>
