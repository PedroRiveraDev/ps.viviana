---
import { SITE_CONFIG, NAVIGATION } from '@/utils/constants';
const currentYear = new Date().getFullYear();
---

<footer class="w-full bg-pink-100 border-t border-gray-200">
  <div class="max-w-7xl mx-auto px-4 py-8">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      <!-- Columna 1 - Informaci칩n principal -->
      <div class="flex flex-col space-y-4">
        <div>
          <a href="/" class="inline-block mb-3">
            <span class="text-xl font-bold text-primary-900 font-heading">{SITE_CONFIG.name}</span>
          </a>
          <p class="text-gray-700 text-sm leading-relaxed">
            {SITE_CONFIG.description}
          </p>
        </div>
      </div>

      <!-- Columna 2 - Enlaces r치pidos -->
      <div class="flex flex-col">
        <h3 class="text-lg font-bold mb-4 text-primary-900 font-heading">Enlaces r치pidos</h3>
        <ul class="space-y-2">
          {NAVIGATION.map((item) => (
            <li>
              <a
                href={item.href}
                class="text-gray-700 hover:text-pink-600 transition-colors text-sm"
              >
                {item.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Columna 3 - Informaci칩n de contacto -->
      <div class="flex flex-col">
        <h3 class="text-lg font-bold mb-4 text-primary-900 font-heading">Contacto</h3>
        <div class="space-y-2">
          <p class="text-sm text-gray-700">
            {SITE_CONFIG.contact.phone}
          </p>
          <p class="text-sm text-gray-700">
            {SITE_CONFIG.contact.email}
          </p>
          <p class="text-sm text-gray-700">
            {SITE_CONFIG.contact.address}
          </p>
        </div>
      </div>
    </div>

    <div class="border-t border-gray-200/50 mt-8 pt-6 text-center text-gray-600 text-xs">
      <p>
        &copy; {currentYear} {SITE_CONFIG.name}. Dev by <a href="/" class="text-pink-600 hover:text-pink-500">SkinsLabs</a>.
      </p>
    </div>
  </div>
</footer>

